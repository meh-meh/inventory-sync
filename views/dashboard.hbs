<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Inventory Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .stat-card { text-align: center; padding: 20px; }
        .stat-number { font-size: 24px; font-weight: bold; margin: 10px 0; }
        .stat-label { color: #666; }
        .alert-low-stock { background-color: #fff3cd; border-color: #ffecb5; }
        .auth-container { max-width: 600px; margin: 0 auto; padding: 40px 20px; }
        .auth-card { box-shadow: 0 4px 8px rgba(0,0,0,0.1); padding: 30px; }
        .auth-title { margin-bottom: 30px; text-align: center; }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">Inventory Manager</a>
            <div class="navbar-nav">
                <a class="nav-link" href="/inventory">Inventory</a>
                <a class="nav-link" href="/orders">Orders</a>
                <a class="nav-link" href="/sync">Sync</a>
                <a class="nav-link" href="/settings">Settings</a>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        {{#if needsAuthentication}}
            <!-- Authentication required view -->
            <div class="auth-container">
                <div class="card auth-card">
                    <h2 class="auth-title">Welcome to Inventory Manager</h2>
                    <div class="alert alert-info">
                        <strong>Authentication Required</strong>
                        <p>Please authenticate with Etsy to access your inventory data.</p>
                    </div>
                    <div class="text-center mt-4">
                        <a href="/oauth/connect" class="btn btn-primary btn-lg">Connect with Etsy</a>
                    </div>
                </div>
            </div>
        {{else}}
            <!-- Dashboard view for authenticated users -->
            <div class="row">
                <div class="col-md-4">
                    <div class="card stat-card">
                        <div class="stat-label">Total Products</div>
                        <div class="stat-number">{{stats.totalProducts}}</div>
                        <small>{{stats.productsWithEtsy}} on Etsy / {{stats.productsWithShopify}} on Shopify</small>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card stat-card">
                        <div class="stat-label">Unshipped Orders</div>
                        <div class="stat-number">{{stats.unshippedOrders}}</div>
                        <small>{{stats.recentlyShipped}} shipped in last week</small>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card stat-card">
                        <div class="stat-label">Low Stock Items</div>
                        <div class="stat-number">{{stats.lowStockCount}}</div>
                        <small>Below minimum threshold</small>
                    </div>
                </div>
            </div>

            <div class="row mt-4">
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">Recent Orders</h5>
                            <a href="/orders" class="btn btn-sm btn-primary">View All</a>
                        </div>
                        <div class="list-group list-group-flush">
                            {{#each recentOrders}}
                            <div class="list-group-item">
                                <div class="d-flex w-100 justify-content-between">
                                    <h6 class="mb-1">Order #{{receipt_id}}</h6>
                                    <small>{{formatDate order_date}}</small>
                                </div>
                                <p class="mb-1">{{etsy_order_data.name}}</p>
                                <small>
                                    {{#each items}}
                                        {{quantity}}x {{sku}}{{#unless @last}}, {{/unless}}
                                    {{/each}}
                                </small>
                            </div>
                            {{/each}}
                        </div>
                    </div>
                </div>
                
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">Low Stock Items</h5>
                            <a href="/inventory" class="btn btn-sm btn-primary">View All</a>
                        </div>
                        <div class="list-group list-group-flush">
                            {{#each lowStockItems}}
                            <div class="list-group-item {{#if critical}}alert-low-stock{{/if}}">
                                <div class="d-flex w-100 justify-content-between">
                                    <h6 class="mb-1">{{name}}</h6>
                                    <span class="badge bg-warning">{{quantity_available}} left</span>
                                </div>
                                <p class="mb-1">SKU: {{sku}}</p>
                                <small>Location: {{location}}</small>
                            </div>
                            {{/each}}
                        </div>
                    </div>
                </div>
            </div>

            <div class="row mt-4">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0">Quick Actions</h5>
                        </div>
                        <div class="card-body">
                            <a href="/inventory/add" class="btn btn-success me-2">Add New Product</a>
                            <a href="/sync-etsy" class="btn btn-primary me-2">Sync Etsy</a>
                            <a href="/sync-shopify" class="btn btn-primary me-2">Sync Shopify</a>
                            <a href="/sync-orders" class="btn btn-info">Sync Orders</a>
                        </div>
                    </div>
                </div>
            </div>
        {{/if}}
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>