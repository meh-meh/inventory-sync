<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Product Details - {{product.sku}}</title>
    <style>
        /* Keep specific styles for this view */
        .product-image {
            max-width: 100%;
            max-height: 400px;
            object-fit: contain;
            margin-bottom: 20px;
        }
        .marketplace-section { margin-top: 20px; }
        .connection-status { font-size: 0.9rem; }
        .connected { color: #198754; }
        .disconnected { color: #dc3545; }
        .sync-info { font-size: 0.8em; color: #6c757d; }
    </style>
</head>
<body>
    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2>Product Details: {{product.sku}}</h2>
            <a href="/inventory" class="btn btn-outline-secondary">Back to Inventory</a>
        </div>

        <div class="row">
            <!-- Left Column: Image and Basic Info -->
            <div class="col-md-5">
                <div class="card mb-4">
                    <div class="card-body text-center">
                        {{#if product.etsy_data.images.0.url}}
                            <img src="{{product.etsy_data.images.0.url}}" alt="{{product.name}}" class="product-image img-thumbnail">
                        {{else if product.raw_shopify_data.product.images.edges.0.node.originalSrc}}
                             <img src="{{product.raw_shopify_data.product.images.edges.0.node.originalSrc}}" alt="{{product.name}}" class="product-image img-thumbnail">
                        {{else}}
                            <div class="text-muted p-5 border rounded bg-light">
                                <i class="bi bi-image" style="font-size: 3rem;"></i><br>
                                No Image Available
                            </div>
                        {{/if}}
                    </div>
                </div>
                <div class="card mb-4">
                    <div class="card-header">Basic Information</div>
                    <div class="card-body">
                        <dl class="row">
                            <dt class="col-sm-4">SKU</dt>
                            <dd class="col-sm-8">{{product.sku}}</dd>

                            <dt class="col-sm-4">Name</dt>
                            <dd class="col-sm-8">{{product.name}}</dd>

                            <dt class="col-sm-4">Location</dt>
                            <dd class="col-sm-8">{{product.location}}</dd>
                        </dl>
                    </div>
                </div>
            </div>

            <!-- Right Column: Inventory and Marketplace Details -->
            <div class="col-md-7">
                <div class="card mb-4">
                    <div class="card-header">Inventory Levels</div>
                    <div class="card-body">
                        <dl class="row">
                            <dt class="col-sm-5">Quantity On Hand</dt>
                            <dd class="col-sm-7">{{product.quantity_on_hand}}</dd>

                            <dt class="col-sm-5">Quantity Committed</dt>
                            <dd class="col-sm-7">{{product.quantity_committed}}</dd>

                            <dt class="col-sm-5">Quantity Available</dt>
                            <dd class="col-sm-7 fw-bold">{{product.quantity_available}}</dd>
                        </dl>
                        <button class="btn btn-sm btn-outline-primary" data-bs-toggle="modal" data-bs-target="#adjustInventoryModal">Adjust Inventory</button>
                    </div>
                </div>

                <!-- Etsy Section -->
                <div class="card mb-4 marketplace-section">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <span>Etsy Details</span>
                        <span class="connection-status">
                            {{#if etsyConnected}}
                                <span class="connected"><i class="bi bi-check-circle-fill"></i> Linked</span>
                            {{else}}
                                <span class="disconnected"><i class="bi bi-exclamation-triangle-fill"></i> Not Linked</span>
                            {{/if}}
                        </span>
                    </div>
                    <div class="card-body">
                        {{#if etsyConnected}}
                            <dl class="row">
                                <dt class="col-sm-4">Listing ID</dt>
                                <dd class="col-sm-8">
                                    <a href="https://www.etsy.com/listing/{{product.etsy_data.listing_id}}" target="_blank">
                                        {{product.etsy_data.listing_id}}
                                    </a>
                                </dd>

                                <dt class="col-sm-4">Quantity</dt>
                                <dd class="col-sm-8">{{product.etsy_data.quantity}}</dd>

                                <dt class="col-sm-4">Status</dt>
                                <dd class="col-sm-8">{{product.etsy_data.state}}</dd>
                            </dl>
                            <p class="sync-info">Last Synced: {{formatDate product.etsy_data.last_synced}}</p>
                            <a class="btn btn-sm btn-outline-secondary me-2" href="https://www.etsy.com/listing/{{product.etsy_data.listing_id}}" target="_blank" rel="noopener noreferrer">View on Etsy</a>
                            <button class="btn btn-sm btn-primary me-2" onclick="syncProduct('{{product.sku}}', 'etsy')">Sync with Etsy</button>
                            <button class="btn btn-sm btn-danger" onclick="unlinkProduct('{{product.sku}}', 'etsy')">Unlink from Etsy</button>
                        {{else}}
                            <p>This product is not currently linked to an Etsy listing.</p>
                            <button class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#linkEtsyModal">Link to Etsy Listing</button>
                        {{/if}}
                    </div>
                </div>

                <!-- Shopify Section -->
                <div class="card mb-4 marketplace-section">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <span>Shopify Details</span>
                        <span class="connection-status">
                             {{#if shopifyConnected}}
                                <span class="connected"><i class="bi bi-check-circle-fill"></i> Linked</span>
                            {{else}}
                                <span class="disconnected"><i class="bi bi-exclamation-triangle-fill"></i> Not Linked</span>
                            {{/if}}
                        </span>
                    </div>
                    <div class="card-body">
                        {{#if shopifyConnected}}
                             <dl class="row">
                                <dt class="col-sm-4">Product ID</dt>
                                <dd class="col-sm-8">{{product.shopify_data.product_id}}</dd>

                                <dt class="col-sm-4">Variant ID</dt>
                                <dd class="col-sm-8">{{product.shopify_data.variant_id}}</dd>

                                <dt class="col-sm-4">Inventory</dt>
                                <dd class="col-sm-8">{{product.shopify_data.inventory_quantity}}</dd>
                            </dl>
                            <p class="sync-info">Last Synced: {{formatDate product.shopify_data.last_synced}}</p>
                                {{!-- View on Shopify: prefer a direct product_url, then storefront (shop_domain + handle), then admin fallback (shop_domain + product_id) --}}
                                {{!-- Prefer shopify_data fields, fall back to raw_shopify_data.product if present --}}
                                {{#if product.shopify_data.product_url}}
                                    <a class="btn btn-sm btn-outline-secondary me-2" href="{{product.shopify_data.product_url}}" target="_blank" rel="noopener noreferrer">View on Shopify</a>
                                {{else}}
                                    {{!-- Use product.shopify_data.shop_domain if present, otherwise fall back to shopifyShopName passed from the server --}}
                                    {{#if product.shopify_data.shop_domain}}
                                        {{#if product.shopify_data.handle}}
                                            <a class="btn btn-sm btn-outline-secondary me-2" href="https://{{product.shopify_data.shop_domain}}/products/{{product.shopify_data.handle}}" target="_blank" rel="noopener noreferrer">View on Shopify</a>
                                        {{else if product.shopify_data.product_id}}
                                            {{!-- Prefer admin.shopify.com pattern if shopifyShopName is available --}}
                                            {{#if shopifyShopName}}
                                                <a class="btn btn-sm btn-outline-secondary me-2" href="https://admin.shopify.com/store/{{shopifyShopName}}/products/{{product.shopify_data.product_id}}" target="_blank" rel="noopener noreferrer">Open in Shopify Admin</a>
                                            {{else}}
                                                <a class="btn btn-sm btn-outline-secondary me-2" href="https://{{product.shopify_data.shop_domain}}/admin/products/{{product.shopify_data.product_id}}" target="_blank" rel="noopener noreferrer">Open in Shopify Admin</a>
                                            {{/if}}
                                        {{/if}}
                                    {{else if shopifyShopName}}
                                        {{!-- Only show admin links when we have the store name and a product id. Avoid using shopifyShopName as a domain directly (prevents malformed URLs). --}}
                                        {{#if product.shopify_data.product_id}}
                                            <a class="btn btn-sm btn-outline-secondary me-2" href="https://admin.shopify.com/store/{{shopifyShopName}}/products/{{product.shopify_data.product_id}}" target="_blank" rel="noopener noreferrer">Open in Shopify Admin</a>
                                        {{/if}}
                                    {{else if product.raw_shopify_data.product}}
                                        {{!-- raw_shopify_data.product may contain online_store_url, handle, id, etc. --}}
                                        {{#with product.raw_shopify_data.product}}
                                            {{#if online_store_url}}
                                                <a class="btn btn-sm btn-outline-secondary me-2" href="{{online_store_url}}" target="_blank" rel="noopener noreferrer">View on Shopify</a>
                                            {{else}}
                                                {{!-- Try to build using available domains --}}
                                                {{#if handle}}
                                                    {{#if ../product.shopify_data.shop_domain}}
                                                        <a class="btn btn-sm btn-outline-secondary me-2" href="https://{{../product.shopify_data.shop_domain}}/products/{{handle}}" target="_blank" rel="noopener noreferrer">View on Shopify</a>
                                                    {{else if ../shopifyShopName}}
                                                        {{!-- Avoid using shopifyShopName as a raw domain; only render admin link when we have product id --}}
                                                        <a class="btn btn-sm btn-outline-secondary me-2" href="https://admin.shopify.com/store/{{../shopifyShopName}}/products/{{../product.shopify_data.product_id}}" target="_blank" rel="noopener noreferrer">Open in Shopify Admin</a>
                                                    {{/if}}
                                                {{else if id}}
                                                    {{#if ../shopifyShopName}}
                                                        <a class="btn btn-sm btn-outline-secondary me-2" href="https://admin.shopify.com/store/{{../shopifyShopName}}/products/{{id}}" target="_blank" rel="noopener noreferrer">Open in Shopify Admin</a>
                                                    {{else if ../product.shopify_data.shop_domain}}
                                                        <a class="btn btn-sm btn-outline-secondary me-2" href="https://{{../product.shopify_data.shop_domain}}/admin/products/{{id}}" target="_blank" rel="noopener noreferrer">Open in Shopify Admin</a>
                                                    {{/if}}
                                                {{/if}}
                                            {{/if}}
                                        {{/with}}
                                    {{/if}}
                                {{/if}}
                                <button class="btn btn-sm btn-success me-2" onclick="syncProduct('{{product.sku}}', 'shopify')">Sync with Shopify</button>
                                <button class="btn btn-sm btn-danger" onclick="unlinkProduct('{{product.sku}}', 'shopify')">Unlink from Shopify</button>
                        {{else}}
                            <p>This product is not currently linked to a Shopify product/variant.</p>
                            <button class="btn btn-sm btn-success" data-bs-toggle="modal" data-bs-target="#linkShopifyModal">Link to Shopify Product</button>
                        {{/if}}
                    </div>
                </div>

                <!-- Properties Section -->
                <div class="card mb-4">
                    <div class="card-header">Properties</div>
                    <div class="card-body">
                        {{#if product.properties}}
                            <dl class="row">
                                {{#each product.properties}}
                                    <dt class="col-sm-4">{{@key}}</dt>
                                    <dd class="col-sm-8">{{this}}</dd>
                                {{/each}}
                            </dl>
                        {{else}}
                            <p class="text-muted">No additional properties defined.</p>
                        {{/if}}
                        <button class="btn btn-sm btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#editPropertiesModal">Edit Properties</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Modals (Adjust Inventory, Link Etsy, Link Shopify, Edit Properties) -->
        <!-- ... (Keep existing modals) ... -->

        <!-- Link Etsy Modal: shows candidate ETSY- records and allows manual entry -->
        <div class="modal fade" id="linkEtsyModal" tabindex="-1" aria-labelledby="linkEtsyModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="linkEtsyModalLabel">Link Etsy Listing</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <p>Search suggestions are based on title similarity and presence of images. Select one to link, or enter an Etsy listing ID manually (e.g. 4303887099).</p>
                        <div id="etsyCandidatesArea">
                            <p class="text-muted">Loading suggestions...</p>
                        </div>
                        <hr>
                        <div class="mb-3">
                            <label for="manualEtsyId" class="form-label">Manual Etsy Listing ID</label>
                            <input type="text" id="manualEtsyId" class="form-control" placeholder="e.g. 4303887099">
                        </div>
                        <div id="linkResult" class="mt-2"></div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary" id="linkManualBtn">Link Manual ID</button>
                    </div>
                </div>
            </div>
        </div>

    <!-- Scripts specific to this view -->
    <script>
        // Existing product details script area preserved

        // New: search Etsy candidates and link
        (function(){
            const sku = '{{product.sku}}';
            const candidatesArea = document.getElementById('etsyCandidatesArea');
            const linkResult = document.getElementById('linkResult');
            const manualInput = document.getElementById('manualEtsyId');
            const linkManualBtn = document.getElementById('linkManualBtn');

            // When modal opens, fetch suggestions
            const linkModalEl = document.getElementById('linkEtsyModal');
            linkModalEl.addEventListener('show.bs.modal', async function () {
                candidatesArea.innerHTML = '<p class="text-muted">Loading suggestions...</p>';
                linkResult.innerHTML = '';
                try {
                    const resp = await fetch(`/inventory/${encodeURIComponent(sku)}/etsy-candidates`);
                    if (!resp.ok) throw new Error('Failed to fetch candidates');
                    const data = await resp.json();
                    renderCandidates(data.candidates || []);
                } catch (e) {
                    candidatesArea.innerHTML = '<p class="text-danger">Error loading suggestions.</p>';
                }
            });

            function renderCandidates(list) {
                if (!list || list.length === 0) {
                    candidatesArea.innerHTML = '<p class="text-muted">No suggestions found.</p>';
                    return;
                }
                const ul = document.createElement('div');
                ul.className = 'list-group';
                list.forEach(item => {
                    const imgUrl = (item.etsy_data && item.etsy_data.images && item.etsy_data.images[0] && item.etsy_data.images[0].url) || '';
                    const title = (item.etsy_data && item.etsy_data.title) || item.name || item.sku;
                    const li = document.createElement('div');
                    li.className = 'list-group-item d-flex align-items-center justify-content-between';
                    li.innerHTML = `
                        <div class="d-flex align-items-center">
                            ${imgUrl ? `<img src="${imgUrl}" style="width:64px;height:64px;object-fit:cover;margin-right:12px;border-radius:4px;">` : ''}
                            <div>
                                <div><strong>${escapeHtml(title)}</strong></div>
                                <div class="text-muted small">SKU: ${escapeHtml(item.sku || '')} • Listing: ${escapeHtml(item.etsy_data && item.etsy_data.listing_id || '')}</div>
                            </div>
                        </div>
                        <div>
                            <button class="btn btn-sm btn-primary linkCandidateBtn" data-listing="${escapeHtml(item.etsy_data && item.etsy_data.listing_id || '')}" data-etsysku="${escapeHtml(item.sku || '')}">Link</button>
                        </div>
                    `;
                    ul.appendChild(li);
                });
                candidatesArea.innerHTML = '';
                candidatesArea.appendChild(ul);

                // attach handlers
                Array.from(document.getElementsByClassName('linkCandidateBtn')).forEach(btn=>{
                    btn.addEventListener('click', async function(){
                        const listing = this.getAttribute('data-listing');
                        const etsySku = this.getAttribute('data-etsysku');
                        await performLink({ listingId: listing, etsySku });
                    });
                });
            }

            async function performLink(body) {
                linkResult.innerHTML = '<div class="text-muted">Linking...</div>';
                try {
                    const resp = await fetch(`/inventory/${encodeURIComponent(sku)}/link-etsy`, {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify(body)
                    });
                    const data = await resp.json();
                    if (resp.ok) {
                        linkResult.innerHTML = '<div class="text-success">Linked successfully. Refreshing...</div>';
                        setTimeout(()=>location.reload(), 800);
                    } else {
                        linkResult.innerHTML = `<div class="text-danger">Error: ${escapeHtml(data.error || 'Failed to link')}</div>`;
                    }
                } catch (e) {
                    linkResult.innerHTML = '<div class="text-danger">Network error while linking.</div>';
                }
            }

            linkManualBtn.addEventListener('click', async function(){
                const val = (manualInput.value || '').trim();
                if (!val) {
                    linkResult.innerHTML = '<div class="text-danger">Enter an Etsy listing ID first.</div>';
                    return;
                }
                await performLink({ listingId: val });
            });

            function escapeHtml(s){ return (s||'').replace(/[&<>"']/g, function(c){ return {'&':'&amp;','<':'&lt;','>':'&gt;','"':'&quot;',"'":'&#39;'}[c]; }); }
        })();
    </script>
</body>
</html>